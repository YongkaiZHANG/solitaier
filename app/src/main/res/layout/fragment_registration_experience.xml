<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/kuleuvenlogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="156dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Ervaring"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintVertical_bias="0.483" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/indicatorSeekBarPatience"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_show_indicator="none"
        app:isb_indicator_text_size="18sp"
        app:isb_seek_smoothly="false"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_min="0"
        app:isb_progress="1"
        app:isb_max="3"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_size="15sp"
        app:isb_ticks_count="4"
        app:isb_tick_texts_array="@array/frequencyExperience"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/blueBackground"
        app:isb_track_progress_size="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:isb_show_thumb_text="false"/>

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/indicatorSeekBarTablet"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="3"
        app:isb_min="0"
        app:isb_progress="1"
        app:isb_seek_smoothly="false"
        app:isb_show_indicator="none"
        app:isb_show_tick_marks_type="oval"
        app:isb_show_tick_texts="true"
        app:isb_thumb_size="20dp"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_array="@array/frequencyExperience"
        app:isb_tick_texts_size="15sp"
        app:isb_ticks_count="4"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/blueBackground"
        app:isb_track_progress_size="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicatorSeekBarPatience" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="224dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:text="Hoe vaak werkt u met een tablet?"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/indicatorSeekBarTablet"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="224dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:text="Hoe vaak speelt u Patience?"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/indicatorSeekBarPatience"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Verder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicatorSeekBarTablet"
        app:layout_constraintVertical_bias="0.016" />


</androidx.constraintlayout.widget.ConstraintLayout>